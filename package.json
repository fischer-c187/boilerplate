{
  "name": "boilerplate",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "NODE_ENV=production node dist/server/index.js",
    "db:generate": "drizzle-kit --config src/server/adaptaters/db/drizzle.config.ts generate",
    "db:migrate": "drizzle-kit --config src/server/adaptaters/db/drizzle.config.ts migrate",
    "db:studio": "drizzle-kit --config src/server/adaptaters/db/drizzle.config.ts studio",
    "db:drop": "drizzle-kit --config src/server/adaptaters/db/drizzle.config.ts drop",
    "db:reset": "tsx scripts/reset-db.ts",
    "docker:up": "docker compose -f docker/docker-compose.yml --env-file .env up -d",
    "docker:down": "docker compose -f docker/docker-compose.yml --env-file .env down",
    "docker:logs": "docker compose -f docker/docker-compose.yml --env-file .env logs -f",
    "docker:ps": "docker compose -f docker/docker-compose.yml --env-file .env ps",
    "docker:restart": "docker compose -f docker/docker-compose.yml --env-file .env restart",
    "stripe:listen": "stripe listen --events checkout.session.completed,customer.subscription.created,customer.subscription.updated --forward-to localhost:3000/api/stripe/webhook",
    "stripe:trigger": "stripe trigger checkout.session.completed",
    "build:client": "NODE_ENV=production vite build --mode client",
    "build:server": "NODE_ENV=production vite build",
    "build:types": "tsc",
    "build": "pnpm run build:client && pnpm run build:server && pnpm run build:types",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@hono/zod-validator": "^0.7.5",
    "@tanstack/react-query": "^5.90.10",
    "@tanstack/react-router": "^1.135.0",
    "@tanstack/react-router-devtools": "^1.135.0",
    "@tanstack/react-router-ssr-query": "^1.139.3",
    "@tanstack/router-plugin": "^1.135.0",
    "@tanstack/zod-adapter": "^1.136.8",
    "better-auth": "^1.3.34",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.3",
    "i18next": "^25.6.0",
    "nodemailer": "^7.0.10",
    "postgres": "^3.4.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.2.1",
    "stripe": "^20.0.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@hono/eslint-config": "^2.0.3",
    "@hono/vite-dev-server": "^0.23.0",
    "@tailwindcss/vite": "^4.1.16",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@tanstack/react-query-devtools": "^5.91.0",
    "@types/eslint__js": "^9.14.0",
    "@types/node": "^20.11.17",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "react-scan": "^0.4.3",
    "tailwindcss": "^4.1.16",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "web-vitals": "^5.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
